  url      = env("DATABASE_URL")
}
model Student {
 id Int @id @default(autoincrement())
 firstName String
 lastName String
 major String
 faculty String
 email String @unique
 phone String
 createdAt DateTime @default(now())
 updatedAt DateTime @updatedAt

}
model User {
 id String @id @default(uuid()) // primary key แบบ UUID ช่วยป้องกันการเดา id ง่ายๆ
 username String @unique // ชื่อผู้ใช้ต้องไม่ซํ้า
 password String // เก็บเฉพาะรหัสผ่านที่ 'hash' แล้วเท่านั้น
 role String @default("user") // "user" หรือ "admin" ใช้สําหรับ RBAC
 createdAt DateTime @default(now()) // บันทึกเวลาสร้าง
 updatedAt DateTime @updatedAt // บันทึกเวลาปรับปรุงล่าสุดอัตโนมัติ
}